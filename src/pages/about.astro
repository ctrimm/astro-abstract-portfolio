---
import BaseLayout from '@layouts/BaseLayout.astro';
import { siteConfig } from '@/data/site';

const currentYear = new Date().getFullYear();

const services = [
  'Web Design',
  'UI/UX Design',
  'Branding',
  'Prototyping',
  'Website Maintenance',
];
---

<BaseLayout
  title={`About | ${siteConfig.name}`}
  description={siteConfig.description}
>
  <div class="min-h-screen flex flex-col">
    <!-- Hero Section -->
    <section class="flex-1 flex items-center justify-center py-20 md:py-32">
      <div class="container mx-auto px-8">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <!-- Title (Left) -->
          <div>
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold">
              ({siteConfig.name.split(' ')[0]}—©{currentYear})
            </h1>
          </div>

          <!-- 3D Logo (Right) -->
          <div class="flex items-center justify-center md:justify-end">
            <svg width="200" height="200" viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
              <!-- 3D N Letter -->
              <path d="M60 50 L80 50 L80 150 L60 150 Z" fill="#404040"/>
              <path d="M60 50 L120 130 L120 50 L140 50 L140 150 L120 150 L60 70 L60 150 L40 150 L40 50 Z" fill="#606060"/>
              <path d="M120 50 L140 50 L140 150 L120 150 Z" fill="#808080"/>
              <!-- Shadow effect -->
              <ellipse cx="100" cy="180" rx="60" ry="10" fill="black" opacity="0.1"/>
            </svg>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-12 border-t border-gray-200">
      <div class="container mx-auto px-8">
        <div class="grid md:grid-cols-5 gap-8 md:gap-12">
          {services.map((service) => (
            <div>
              <h3 class="font-semibold text-lg">{service}</h3>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Bottom Section -->
    <section class="py-12 md:py-20">
      <div class="container mx-auto px-8">
        <div class="grid md:grid-cols-2 gap-12 items-start">
          <!-- Scroll Indicator (Left) -->
          <div class="flex items-center gap-2 text-sm text-gray-500">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor">
              <circle cx="10" cy="10" r="8" stroke-width="1.5"/>
              <path d="M10 6 L10 14 M7 11 L10 14 L13 11" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>Scroll to start</span>
          </div>

          <!-- Description (Right) -->
          <div class="md:text-right">
            <p class="text-lg md:text-xl leading-relaxed max-w-2xl md:ml-auto">
              {siteConfig.description} My approach is simple — understand the goal, create structure, then refine every detail until it feels effortless.
            </p>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
