---
import BaseLayout from '@layouts/BaseLayout.astro';
import { siteConfig } from '@/data/site';


const services = [
  'Web Design',
  'UI/UX Design',
  'Branding',
  'Code',
  'Chaos',
];
---

<BaseLayout
  title={`About | ${siteConfig.name}`}
  description={siteConfig.description}
>
  <div class="min-h-screen bg-black text-white p-4">
    <!-- Hero Section -->
    <section class="py-20 md:py-32 border-b-4 border-white mb-20 relative overflow-hidden">
        <div class="absolute inset-0 opacity-10 pointer-events-none noise-canvas"></div>
        <h1 class="font-display text-8xl md:text-[8rem] leading-none uppercase break-words glitch" data-text="ABOUT_ME">
          ABOUT_ME
        </h1>
        <p class="font-mono text-xl mt-8 max-w-2xl border-l-4 border-white pl-4 ml-4">
          {siteConfig.description} <br>
          <span class="bg-white text-black">NO COMPROMISE.</span>
        </p>
    </section>

    <!-- Services Section -->
    <section class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-20">
      <div class="border-4 border-white p-8 hover:bg-white hover:text-black transition-colors">
        <h2 class="font-display text-4xl mb-8 uppercase">Services</h2>
        <ul class="font-mono text-xl space-y-4">
          {services.map((service) => (
            <li class="border-b-2 border-current pb-2 uppercase flex justify-between">
              <span>{service}</span>
              <span>[+]</span>
            </li>
          ))}
        </ul>
      </div>
      
      <div class="border-4 border-white p-8 flex flex-col justify-between">
         <div class="font-display text-9xl leading-none self-end">?</div>
         <p class="font-mono uppercase">
           We create things that don't just exist. They scream.
         </p>
      </div>
    </section>
  </div>
</BaseLayout>
