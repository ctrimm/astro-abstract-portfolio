---
import BaseLayout from '@layouts/BaseLayout.astro';
import { siteConfig } from '@/data/site';
---

<BaseLayout
  title={`Contact | ${siteConfig.name}`}
  description="Get in touch. Raw communication channel."
>
  <div class="min-h-screen bg-black text-white p-4">
    <!-- Header -->
    <header class="mb-12 border-b-4 border-white pb-8">
        <h1 class="font-display text-[10vw] leading-none uppercase mix-blend-difference">
            SIGNAL_INPUT
        </h1>
    </header>

    <div class="grid md:grid-cols-2 gap-20">
        <!-- Contact Form -->
        <form id="brutalist-form" class="space-y-8">
            <div class="group">
                <label for="name" class="block font-mono text-sm uppercase mb-2">IDENTIFICATION_NAME:</label>
                <input type="text" id="name" required class="w-full bg-transparent border-4 border-white p-4 font-mono text-xl focus:bg-white focus:text-black focus:outline-none transition-colors placeholder-gray-600" placeholder="ENTER_NAME" />
            </div>

            <div class="group">
                <label for="email" class="block font-mono text-sm uppercase mb-2">DIGITAL_ADDRESS:</label>
                <input type="email" id="email" required class="w-full bg-transparent border-4 border-white p-4 font-mono text-xl focus:bg-white focus:text-black focus:outline-none transition-colors placeholder-gray-600" placeholder="ENTER_EMAIL" />
            </div>

            <div class="group">
                <label for="message" class="block font-mono text-sm uppercase mb-2">TRANSMISSION_DATA:</label>
                <textarea id="message" rows="6" required class="w-full bg-transparent border-4 border-white p-4 font-mono text-xl focus:bg-white focus:text-black focus:outline-none transition-colors placeholder-gray-600 resize-none" placeholder="ENTER_MESSAGE_CONTENT"></textarea>
            </div>

            <button type="submit" class="w-full bg-white text-black font-display text-4xl uppercase p-6 hover:bg-primary hover:text-black transition-colors border-4 border-transparent hover:border-white">
                INITIALIZE_SEND ->
            </button>
        </form>

        <!-- Info Column -->
        <div class="font-mono space-y-12">
            <div class="border-l-4 border-white pl-8">
                <h3 class="font-display text-3xl mb-4">DIRECT_LINK</h3>
                <a href={siteConfig.links.email} class="text-xl underline decoration-2 hover:bg-white hover:text-black p-1 transition-colors">
                    {siteConfig.email}
                </a>
            </div>

            <div class="border-l-4 border-white pl-8">
                <h3 class="font-display text-3xl mb-4">NETWORK_NODES</h3>
                <ul class="space-y-4 text-xl">
                    <li><a href={siteConfig.links.github} target="_blank" class="hover:bg-white hover:text-black p-1 transition-colors">[GITHUB_REPO]</a></li>
                    <li><a href={siteConfig.links.linkedin} target="_blank" class="hover:bg-white hover:text-black p-1 transition-colors">[LINKEDIN_PROFILE]</a></li>
                </ul>
            </div>
            
            <div class="bg-white text-black p-8 font-display text-center">
                 <div class="text-6xl mb-4 animate-bounce-slow">!</div>
                 <p class="font-mono text-sm">
                     OPEN FOR<br>COLLABORATION
                 </p>
            </div>
        </div>
    </div>
  </div>
</BaseLayout>

<script>
    const form = document.getElementById('brutalist-form') as HTMLFormElement;
    if (form) {
        form.addEventListener('submit', (e) => {
            e.preventDefault();
            const btn = form.querySelector('button');
            if(btn) {
                const originalText = btn.innerText;
                btn.innerText = "TRANSMITTING...";
                btn.classList.add('bg-green-500');
                
                setTimeout(() => {
                    alert('TRANSMISSION RECEIVED.');
                    form.reset();
                    btn.innerText = "TRANSMISSION_COMPLETE";
                    setTimeout(() => {
                         btn.innerText = originalText;
                         btn.classList.remove('bg-green-500');
                    }, 2000);
                }, 1000);
            }
        });
    }
</script>
