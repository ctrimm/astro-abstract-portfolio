---
import BaseLayout from '@layouts/BaseLayout.astro';
import Card from '@components/ui/Card.astro';
import { siteConfig } from '@/data/site';
---

<BaseLayout
  title={`Contact | ${siteConfig.name}`}
  description="Get in touch to discuss your project or collaboration opportunities."
>
  <section class="py-24">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-16">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Let's Work Together</h1>
          <p class="text-lg text-foreground-secondary max-w-2xl mx-auto">
            Have a project in mind or want to collaborate? I'd love to hear from you.
            Fill out the form below or reach out directly.
          </p>
        </div>

        <div class="grid lg:grid-cols-3 gap-8">
          <!-- Contact Form -->
          <div class="lg:col-span-2">
            <Card>
              <form class="space-y-6" id="contact-form">
                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <label
                      for="name"
                      class="block text-sm font-medium mb-2"
                    >
                      Name
                    </label>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      required
                      class="w-full px-4 py-2 bg-background border border-background-tertiary rounded-lg focus:outline-none focus:border-accent transition-colors"
                      placeholder="John Doe"
                    />
                  </div>
                  <div>
                    <label
                      for="email"
                      class="block text-sm font-medium mb-2"
                    >
                      Email
                    </label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      required
                      class="w-full px-4 py-2 bg-background border border-background-tertiary rounded-lg focus:outline-none focus:border-accent transition-colors"
                      placeholder="john@example.com"
                    />
                  </div>
                </div>

                <div>
                  <label
                    for="subject"
                    class="block text-sm font-medium mb-2"
                  >
                    Subject
                  </label>
                  <input
                    type="text"
                    id="subject"
                    name="subject"
                    required
                    class="w-full px-4 py-2 bg-background border border-background-tertiary rounded-lg focus:outline-none focus:border-accent transition-colors"
                    placeholder="Project Inquiry"
                  />
                </div>

                <div>
                  <label
                    for="message"
                    class="block text-sm font-medium mb-2"
                  >
                    Message
                  </label>
                  <textarea
                    id="message"
                    name="message"
                    required
                    rows="6"
                    class="w-full px-4 py-2 bg-background border border-background-tertiary rounded-lg focus:outline-none focus:border-accent transition-colors resize-none"
                    placeholder="Tell me about your project..."
                  ></textarea>
                </div>

                <button
                  type="submit"
                  class="w-full px-8 py-3 bg-accent text-white rounded-full font-medium hover:bg-accent-light transition-colors"
                >
                  Send Message
                </button>
              </form>
            </Card>
          </div>

          <!-- Contact Info -->
          <div class="space-y-6">
            <Card>
              <h3 class="font-semibold mb-4">Email</h3>
              <a
                href={siteConfig.links.email}
                class="text-accent hover:underline"
              >
                hello@example.com
              </a>
            </Card>

            <Card>
              <h3 class="font-semibold mb-4">Social</h3>
              <div class="space-y-3">
                <a
                  href={siteConfig.links.github}
                  class="flex items-center gap-3 text-foreground-secondary hover:text-accent transition-colors"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path
                      fill-rule="evenodd"
                      d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  GitHub
                </a>
                <a
                  href={siteConfig.links.linkedin}
                  class="flex items-center gap-3 text-foreground-secondary hover:text-accent transition-colors"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path
                      d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                    />
                  </svg>
                  LinkedIn
                </a>
                <a
                  href={siteConfig.links.twitter}
                  class="flex items-center gap-3 text-foreground-secondary hover:text-accent transition-colors"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path
                      d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                    />
                  </svg>
                  Twitter
                </a>
              </div>
            </Card>

            <Card>
              <h3 class="font-semibold mb-4">Availability</h3>
              <p class="text-sm text-foreground-secondary">
                Currently available for freelance projects and consulting opportunities.
              </p>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  function initContactForm() {
    const form = document.getElementById('contact-form') as HTMLFormElement;

    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();

        // In a real application, you would send the form data to a server
        // For now, we'll just show an alert
        alert(
          'Thank you for your message! This is a demo form. In production, this would send your message.'
        );

        form.reset();
      });
    }
  }

  initContactForm();

  document.addEventListener('astro:page-load', () => {
    initContactForm();
  });
</script>
