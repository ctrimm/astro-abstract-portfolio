---
import BaseLayout from '@layouts/BaseLayout.astro';
import { siteConfig } from '@/data/site';
---

<BaseLayout
  title={`Contact | ${siteConfig.name}`}
  description="Get in touch to discuss your project or collaboration opportunities."
>
  <div class="min-h-screen flex flex-col">
    <!-- Hero Section -->
    <section class="flex-1 py-20 md:py-32">
      <div class="container mx-auto px-8">
        <div class="max-w-4xl mx-auto">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-8">
            Let's Work<br/>Together
          </h1>

          <div class="grid md:grid-cols-2 gap-12 mt-16">
            <!-- Contact Form -->
            <div>
              <form class="space-y-6" id="contact-form">
                <div>
                  <label for="name" class="block text-sm font-medium mb-2">
                    Name
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 bg-white border border-gray-200 focus:outline-none focus:border-black transition-colors"
                    placeholder="John Doe"
                  />
                </div>

                <div>
                  <label for="email" class="block text-sm font-medium mb-2">
                    Email
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 bg-white border border-gray-200 focus:outline-none focus:border-black transition-colors"
                    placeholder="john@example.com"
                  />
                </div>

                <div>
                  <label for="message" class="block text-sm font-medium mb-2">
                    Message
                  </label>
                  <textarea
                    id="message"
                    name="message"
                    required
                    rows="6"
                    class="w-full px-4 py-3 bg-white border border-gray-200 focus:outline-none focus:border-black transition-colors resize-none"
                    placeholder="Tell me about your project..."
                  ></textarea>
                </div>

                <button
                  type="submit"
                  class="w-full px-8 py-3 bg-black text-white font-medium hover:bg-gray-800 transition-colors"
                >
                  Send Message
                </button>
              </form>
            </div>

            <!-- Contact Info -->
            <div class="space-y-8">
              <div>
                <h3 class="text-sm font-semibold mb-3 uppercase tracking-wider text-gray-500">
                  Email
                </h3>
                <a
                  href={siteConfig.links.email}
                  class="text-lg hover:opacity-70 transition-opacity"
                >
                  {siteConfig.email}
                </a>
              </div>

              <div>
                <h3 class="text-sm font-semibold mb-3 uppercase tracking-wider text-gray-500">
                  Connect
                </h3>
                <div class="space-y-2">
                  <a
                    href={siteConfig.links.linkedin}
                    class="block hover:opacity-70 transition-opacity"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    LinkedIn
                  </a>
                  <a
                    href={siteConfig.links.github}
                    class="block hover:opacity-70 transition-opacity"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    GitHub
                  </a>
                  <a
                    href={siteConfig.links.twitter}
                    class="block hover:opacity-70 transition-opacity"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    Twitter
                  </a>
                </div>
              </div>

              <div>
                <h3 class="text-sm font-semibold mb-3 uppercase tracking-wider text-gray-500">
                  Availability
                </h3>
                <p class="text-gray-600">
                  Currently available for freelance projects and consulting opportunities.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<script>
  function initContactForm() {
    const form = document.getElementById('contact-form') as HTMLFormElement;

    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        alert('Thank you for your message! This is a demo form.');
        form.reset();
      });
    }
  }

  initContactForm();

  document.addEventListener('astro:page-load', () => {
    initContactForm();
  });
</script>
