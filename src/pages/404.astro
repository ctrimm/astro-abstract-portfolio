---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getPath } from '@/utils/paths';
---

<BaseLayout
  title="404 | LOST"
  description="Page not found."
>
  <div class="min-h-screen bg-black text-white flex flex-col justify-center items-center relative overflow-hidden">
    <!-- Glitch Background -->
    <div class="absolute inset-0 z-0 opacity-20 flex justify-center items-center">
         <span class="font-display text-[50vw] select-none text-gray-800">404</span>
    </div>

    <div class="relative z-10 text-center border-4 border-white p-8 md:p-20 bg-black max-w-4xl mx-4">
      <h1 class="font-display text-8xl md:text-9xl mb-4 glitch" data-text="ERROR_404">
        ERROR_404
      </h1>
      <h2 class="font-mono text-2xl md:text-4xl mb-8 uppercase border-b-4 border-white pb-4 inline-block">
        FILE_NOT_FOUND
      </h2>
      <p class="font-mono text-gray-400 mb-12 max-w-lg mx-auto">
        The requested data sector has been corrupted or does not exist in this reality.
      </p>

      <div class="flex flex-col md:flex-row gap-4 justify-center font-display text-2xl">
        <a href={getPath('/')} class="bg-white text-black px-8 py-4 uppercase hover:bg-primary transition-colors border-4 border-white">
          Return_Home
        </a>
        <a href={getPath('/work')} class="px-8 py-4 uppercase border-4 border-white hover:bg-white hover:text-black transition-colors">
          Scan_Archives
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
