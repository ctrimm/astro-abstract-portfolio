---
import BaseLayout from '@layouts/BaseLayout.astro';
import ProjectCard from '@components/cards/ProjectCard.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

type ProjectEntry = CollectionEntry<'projects'>;

const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort(
  (a: ProjectEntry, b: ProjectEntry) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const currentYear = new Date().getFullYear();
---

<BaseLayout
  title="Work | Portfolio"
  description="Explore a selection of projects that showcase design thinking, creativity, and attention to detail."
>
  <div class="min-h-screen flex flex-col">
    <!-- Project Navigation Tabs -->
    <section class="py-8 border-b border-gray-200">
      <div class="container mx-auto px-8">
        <div class="flex flex-wrap gap-6 md:gap-12 text-sm">
          {sortedProjects.map((project: ProjectEntry, index: number) => (
            <a
              href={`/work/${project.id}/`}
              class="hover:opacity-70 transition-opacity"
            >
              ({project.data.title})
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Hero Section -->
    <section class="flex-1 flex items-center justify-center py-20 md:py-32">
      <div class="text-center px-8">
        <h1 class="text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold mb-8 inline-flex items-center gap-4 flex-wrap justify-center">
          <span>(Work</span>
          <span class="inline-block w-20 h-20 md:w-24 md:h-24 bg-gray-200 rounded-lg flex items-center justify-center">
            <span class="text-2xl">ðŸ’¼</span>
          </span>
          <span>Â©{currentYear})</span>
        </h1>
      </div>
    </section>

    <!-- Bottom Section -->
    <section class="py-12 md:py-20">
      <div class="container mx-auto px-8">
        <div class="grid md:grid-cols-2 gap-12 items-start">
          <!-- Scroll Indicator (Left) -->
          <div class="flex items-center gap-2 text-sm text-gray-500">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor">
              <circle cx="10" cy="10" r="8" stroke-width="1.5"/>
              <path d="M10 6 L10 14 M7 11 L10 14 L13 11" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>Scroll to start</span>
          </div>

          <!-- Description (Right) -->
          <div class="md:text-right">
            <p class="text-lg md:text-xl leading-relaxed max-w-2xl md:ml-auto">
              Explore a selection of projects that showcase design thinking, creativity, and attention to detail across different industries and platforms.
            </p>
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- Projects Grid (Full Page Scroll) -->
  <section class="py-20 border-t border-gray-200">
    <div class="container mx-auto px-8">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12">
        {sortedProjects.map((project: ProjectEntry, index: number) => (
          <ProjectCard project={project} index={index} />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
