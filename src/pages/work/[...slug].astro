---
import BaseLayout from '@layouts/BaseLayout.astro';
import Button from '@components/ui/Button.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);
const { title, description, technologies, client, liveUrl, category } =
  project.data;

// Get next/previous projects
const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
const currentIndex = sortedProjects.findIndex((p) => p.id === project.id);
const prevProject = sortedProjects[currentIndex - 1];
const nextProject = sortedProjects[currentIndex + 1];
---

<BaseLayout title={`${title} | Work`} description={description}>
  <!-- Hero -->
  <section class="pt-32 pb-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl">
        <a
          href="/work/"
          class="inline-flex items-center gap-2 text-foreground-muted hover:text-accent mb-8 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"
            />
          </svg>
          Back to Work
        </a>
        <h1
          class="text-4xl md:text-6xl font-bold mb-6"
          transition:name={`project-title-${project.id}`}
        >
          {title}
        </h1>
        <p class="text-xl text-foreground-secondary mb-8">{description}</p>

        <div class="flex flex-wrap gap-8 text-sm">
          <div>
            <span class="text-foreground-muted block mb-1">Category</span>
            <span class="font-medium">{category.replace('-', ' ')}</span>
          </div>
          {client && (
            <div>
              <span class="text-foreground-muted block mb-1">Client</span>
              <span class="font-medium">{client}</span>
            </div>
          )}
          <div>
            <span class="text-foreground-muted block mb-1">Technologies</span>
            <div class="flex flex-wrap gap-2">
              {technologies.map((tech) => (
                <span class="px-2 py-1 bg-background-secondary rounded text-xs">
                  {tech}
                </span>
              ))}
            </div>
          </div>
          {liveUrl && (
            <div class="flex items-end">
              <Button href={liveUrl} variant="primary" size="sm" external>
                View Live Site
              </Button>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Hero Image Placeholder -->
  <section class="pb-16">
    <div class="container mx-auto px-4">
      <div
        class="w-full aspect-video bg-gradient-to-br from-accent/10 to-accent-light/10 rounded-2xl flex items-center justify-center"
      >
        <div class="text-center">
          <div class="text-6xl mb-4">ðŸŽ¨</div>
          <p class="text-foreground-muted">Project Hero Image</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Content -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="prose prose-invert prose-lg max-w-3xl mx-auto">
        <Content />
      </div>
    </div>
  </section>

  <!-- Navigation -->
  <section class="py-16 border-t border-background-tertiary">
    <div class="container mx-auto px-4">
      <div class="flex justify-between">
        {
          prevProject ? (
            <a href={`/work/${prevProject.id}/`} class="group text-left">
              <span class="text-sm text-foreground-muted block mb-1">
                Previous Project
              </span>
              <span class="font-medium group-hover:text-accent transition-colors">
                {prevProject.data.title}
              </span>
            </a>
          ) : (
            <div />
          )
        }

        {
          nextProject && (
            <a href={`/work/${nextProject.id}/`} class="text-right group">
              <span class="text-sm text-foreground-muted block mb-1">
                Next Project
              </span>
              <span class="font-medium group-hover:text-accent transition-colors">
                {nextProject.data.title}
              </span>
            </a>
          )
        }
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .prose {
    @apply text-foreground-secondary;
  }

  .prose :global(h2) {
    @apply text-foreground font-bold text-2xl mt-8 mb-4;
  }

  .prose :global(h3) {
    @apply text-foreground font-semibold text-xl mt-6 mb-3;
  }

  .prose :global(p) {
    @apply mb-4;
  }

  .prose :global(ul),
  .prose :global(ol) {
    @apply mb-4 ml-6;
  }

  .prose :global(li) {
    @apply mb-2;
  }

  .prose :global(strong) {
    @apply text-foreground font-semibold;
  }

  .prose :global(a) {
    @apply text-accent hover:underline;
  }
</style>
