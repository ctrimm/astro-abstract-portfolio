---
import Button from '@components/ui/Button.astro';
---

<section class="py-24 bg-background-secondary">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl md:text-5xl font-bold mb-6 animate-on-scroll">
        Let's Work Together
      </h2>
      <p class="text-lg text-foreground-secondary mb-8 animate-on-scroll">
        Have a project in mind? I'd love to hear about it. Let's create something
        amazing together.
      </p>
      <div class="flex flex-wrap justify-center gap-4 animate-on-scroll">
        <Button href="/contact/" variant="primary" size="lg">
          Get in Touch
        </Button>
        <Button href="/work/" variant="outline" size="lg">
          View My Work
        </Button>
      </div>
    </div>
  </div>
</section>
