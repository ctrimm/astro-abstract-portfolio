---
import Button from '@components/ui/Button.astro';
import { siteConfig } from '@/data/site';

interface Props {
  name: string;
  title: string;
  description: string;
}

const { name, title, description } = Astro.props;
---

<section class="relative min-h-[90vh] flex items-center">
  <div class="container mx-auto px-4 py-20">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-8">
        <div class="space-y-4">
          <span
            class="inline-block text-accent font-medium animate-fade-in"
            style="animation-delay: 0.1s"
          >
            Hello, I'm
          </span>
          <h1
            class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tight"
            transition:name="hero-title"
          >
            <span class="hero-line">
              <span class="hero-word">{name}</span>
            </span>
          </h1>
          <p
            class="text-xl md:text-2xl text-foreground-secondary animate-fade-up"
            style="animation-delay: 0.3s"
          >
            {title}
          </p>
        </div>

        <p
          class="text-lg text-foreground-muted max-w-xl animate-fade-up"
          style="animation-delay: 0.4s"
        >
          {description}
        </p>

        <div
          class="flex flex-wrap gap-4 animate-fade-up"
          style="animation-delay: 0.5s"
        >
          <Button href="/work/" variant="primary" size="lg">
            View My Work
          </Button>
          <Button href="/contact/" variant="outline" size="lg">
            Get in Touch
          </Button>
        </div>

        <div
          class="flex items-center gap-6 pt-4 animate-fade-up"
          style="animation-delay: 0.6s"
        >
          <a
            href={siteConfig.links.github}
            class="text-foreground-muted hover:text-accent transition-colors"
            aria-label="GitHub"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"
              />
            </svg>
          </a>
          <a
            href={siteConfig.links.linkedin}
            class="text-foreground-muted hover:text-accent transition-colors"
            aria-label="LinkedIn"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              />
            </svg>
          </a>
          <a
            href={siteConfig.links.twitter}
            class="text-foreground-muted hover:text-accent transition-colors"
            aria-label="Twitter"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
              />
            </svg>
          </a>
          <a
            href={siteConfig.links.dribbble}
            class="text-foreground-muted hover:text-accent transition-colors"
            aria-label="Dribbble"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0C5.375 0 0 5.375 0 12s5.375 12 12 12 12-5.375 12-12S18.625 0 12 0zm8.722 5.722c1.45 1.775 2.328 4.031 2.328 6.5 0 .403-.025.8-.066 1.191-2.578-.528-5.125-.528-7.319-.034-.144-.35-.284-.706-.419-1.066 2.538-1.034 4.594-2.622 5.476-6.591zm-1.538-1.538c-.819 3.597-2.603 5.119-4.966 6.184C13.172 7.653 11.703 5.28 10.28 3c2.469-.597 4.969-.394 7.904.184zM8.653 3.688c1.397 2.244 2.85 4.597 3.919 7.25-3.153.903-6.647 1.1-10.125.525C3.144 7.65 5.544 4.875 8.653 3.688zm-6.244 8.34c3.769.641 7.544.413 10.969-.609.153.35.3.706.447 1.066-4.172 1.381-7.322 4.35-9.072 8.159-1.916-1.85-3.125-4.434-3.125-7.313 0-.438.041-.866.116-1.284.553.006 1.106.003 1.665-.019zm4.938 10.097c1.594-3.547 4.494-6.294 8.25-7.622.644 1.819 1.125 3.759 1.406 5.791-3.141 1.322-6.675 1.322-9.656-.169zm11.316-.769c-.263-1.838-.694-3.594-1.253-5.247 1.866-.4 3.956-.35 6.172.147-.594 2.372-2.041 4.416-4.919 5.1z"
              />
            </svg>
          </a>
        </div>
      </div>

      <div class="relative lg:justify-self-end">
        <div class="relative w-80 h-80 md:w-96 md:h-96">
          <div
            class="absolute inset-0 bg-accent/20 rounded-full blur-3xl animate-float"
          >
          </div>
          <div
            class="relative z-10 w-full h-full bg-gradient-to-br from-accent/20 to-accent-light/20 rounded-2xl flex items-center justify-center"
          >
            <div class="text-center">
              <div class="text-6xl mb-4">ðŸ‘‹</div>
              <p class="text-foreground-secondary">Your photo here</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div
    class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce-slow"
  >
    <svg class="w-6 h-10 text-foreground-muted" viewBox="0 0 24 40">
      <path
        d="M12 5 L12 30 M6 24 L12 30 L18 24"
        stroke="currentColor"
        stroke-width="2"
        fill="none"
      />
    </svg>
  </div>
</section>

<style>
  .hero-line {
    display: block;
    overflow: hidden;
  }

  .hero-word {
    display: block;
    animation: slideUp 0.8s ease-out forwards;
    animation-delay: 0.2s;
    opacity: 0;
    transform: translateY(100%);
  }

  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
