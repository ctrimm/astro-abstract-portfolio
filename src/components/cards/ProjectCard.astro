---
interface Props {
  project: {
    id: string;
    data: {
      title: string;
      description: string;
      thumbnail: string;
      category: string;
      technologies: string[];
    };
  };
  index?: number;
}

const { project, index = 0 } = Astro.props;
const { title, description, thumbnail, category } = project.data;
const projectNumber = (index + 1).toString().padStart(2, '0');
---

<article class="group">
  <a href={`/work/${project.id}/`} class="block">
    <!-- Project Image -->
    <div class="relative overflow-hidden rounded-lg mb-4 aspect-[4/3] bg-gray-100">
      <div class="w-full h-full flex items-center justify-center transition-transform duration-500 group-hover:scale-105">
        <div class="text-center p-8">
          <div class="text-4xl mb-4">ðŸŽ¨</div>
          <p class="text-sm text-gray-600">Project image</p>
        </div>
      </div>
      
      <!-- Category Label -->
      <div class="absolute top-4 left-4 bg-white px-3 py-1 rounded-full text-xs font-medium">
        {category.replace('-', ' ')}
      </div>
    </div>

    <!-- Project Info -->
    <div class="flex items-start justify-between gap-4">
      <div class="flex-1">
        <h3 class="font-semibold text-lg mb-1 group-hover:opacity-70 transition-opacity">
          {title}
        </h3>
        <p class="text-sm text-gray-600 line-clamp-2">
          {description}
        </p>
      </div>
      <span class="text-sm text-gray-500 font-medium">/{projectNumber}</span>
    </div>
  </a>
</article>
