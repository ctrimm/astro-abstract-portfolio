---
import { siteConfig } from '@/data/site';
const currentYear = new Date().getFullYear();
---

<footer class="bg-black text-white border-t-8 border-white py-20 overflow-hidden relative">
  <div class="container mx-auto px-4">
    <!-- Massive Scrolling Background Text -->
    <div class="absolute top-0 left-0 w-full h-full pointer-events-none opacity-20 overflow-hidden select-none flex items-center justify-center">
       <span class="font-display text-[20vw] leading-none whitespace-nowrap animate-glitch">
         FOOTER
       </span>
    </div>

    <div class="relative z-10 grid md:grid-cols-2 gap-16">
      <div>
        <h2 class="font-display text-6xl md:text-8xl mb-8 uppercase leading-none break-words">
          Let's<br>Work<br>Together
        </h2>
        <a href={siteConfig.links.email} class="font-mono text-2xl md:text-4xl underline decoration-4 hover:bg-white hover:text-black transition-colors p-2 inline-block">
          {siteConfig.email}
        </a>
      </div>

      <div class="flex flex-col justify-end items-end gap-4 text-right">
        <a href={siteConfig.links.github} target="_blank" class="text-4xl font-display hover:translate-x-4 transition-transform uppercase">
          Github ->
        </a>
        <a href={siteConfig.links.linkedin} target="_blank" class="text-4xl font-display hover:translate-x-4 transition-transform uppercase">
          Linkedin ->
        </a>
        
        <div class="mt-20 font-mono text-sm">
          <p>Â© {currentYear} {siteConfig.name}</p>
          <p>NO RIGHTS RESERVED.</p>
        </div>
      </div>
    </div>
  </div>
</footer>
