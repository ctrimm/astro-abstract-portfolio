---
import { navigation } from '@/data/navigation';
import { siteConfig } from '@/data/site';

const currentYear = new Date().getFullYear();
---

<footer class="bg-white border-t border-gray-200">
  <div class="container mx-auto px-8 py-12">
    <div class="grid md:grid-cols-3 gap-8">
      <!-- About -->
      <div>
        <h3 class="font-semibold mb-4">{siteConfig.name}</h3>
        <p class="text-sm text-gray-600 max-w-sm">
          {siteConfig.description}
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="font-semibold mb-4">Navigation</h4>
        <ul class="space-y-2">
          {navigation.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-gray-600 hover:text-black transition-colors"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h4 class="font-semibold mb-4">Connect</h4>
        <ul class="space-y-2">
          <li>
            <a
              href={siteConfig.links.email}
              class="text-sm text-gray-600 hover:text-black transition-colors"
            >
              Email
            </a>
          </li>
          <li>
            <a
              href={siteConfig.links.linkedin}
              class="text-sm text-gray-600 hover:text-black transition-colors"
              target="_blank"
              rel="noopener noreferrer"
            >
              LinkedIn
            </a>
          </li>
          <li>
            <a
              href={siteConfig.links.github}
              class="text-sm text-gray-600 hover:text-black transition-colors"
              target="_blank"
              rel="noopener noreferrer"
            >
              GitHub
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="pt-8 mt-8 border-t border-gray-200 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-gray-500">
        Â© {currentYear} {siteConfig.name}. All rights reserved.
      </p>
      <p class="text-sm text-gray-500">
        Built with <a
          href="https://astro.build"
          class="hover:text-black transition-colors"
          target="_blank"
          rel="noopener noreferrer">Astro</a>
      </p>
    </div>
  </div>
</footer>
